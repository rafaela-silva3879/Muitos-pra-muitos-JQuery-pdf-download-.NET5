<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

  


    <!--JQuery-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        #dropdown-menu {
            color: white;
        }

        #menu-link {
            color: white;
        }
    </style>
</head>
<body>



    <!-- menu do sistema -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark row">
        <div class="col-md-12">
            <div class="row">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <div class="col-md-3">
                            <a class="navbar-brand" href="#">Sistema de Controle de Mercadorias</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>





                        <div class="container navbar navbar-expand-lg navbar-dark bg-dark  col-md-5">
                            <div class="row">
                                <div class="collapse navbar-collapse navbar-nav col-md-6" id="navbarSupportedContent">

                                    <div class="dropdown">
                                        <button id="dropdown-menu" class="btn dropdown-toggle " type="button" data-toggle="dropdown">
                                            Lista de mercadorias

                                        </button>
                                        <ul class="dropdown-menu">

                                            <li><a class="dropdown-item" href="/Mercadoria/Create">Cadastrar Mercadorias</a></li>
                                            <li><a class="dropdown-item" href="/Entrada/Create">Cadastrar Entrada</a></li>
                                            <li><a class="dropdown-item" href="/Saida/Create">Cadastrar Saída</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="/Mercadoria/RelatorioMensal">Relatório mensal de mercadorias</a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </nav>



    <div class="container body-content">



        @RenderBody()
        <hr />
        <footer>
            <p>© @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
   
</body>

</html>

